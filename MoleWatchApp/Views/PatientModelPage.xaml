<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoleWatchApp.Views.PatientModelPage"
             xmlns:vm="clr-namespace:MoleWatchApp.ViewModels"
             xmlns:extensions="clr-namespace:MoleWatchApp.Extensions;assembly=MoleWatchApp"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:PatientModelViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="0.5*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>

        <extensions:PinchToZoomContainer Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="3" >
            <extensions:PinchToZoomContainer.Content>
                <Image x:Name="PatientModelImage" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" 
                       Grid.ColumnSpan="3"
                       Source="{Binding PatientPicture}"
                       HorizontalOptions="FillAndExpand" 
                       VerticalOptions="FillAndExpand"
                ></Image>
            </extensions:PinchToZoomContainer.Content>
        </extensions:PinchToZoomContainer>



        <ImageButton Grid.Column="3" Grid.Row="2" Source="Plus_icon.png"            
                     HorizontalOptions="FillAndExpand" 
                     VerticalOptions="FillAndExpand"
                     BackgroundColor="Transparent"
                     Grid.RowSpan="1"
                     Grid.ColumnSpan="1"
                     
        ></ImageButton>

        <ImageButton Grid.Column="1" Grid.Row="2" Source="Rotate.png"            
                     HorizontalOptions="FillAndExpand" 
                     VerticalOptions="FillAndExpand"
                     BackgroundColor="Transparent"
                     Grid.RowSpan="1"
                     Grid.ColumnSpan="1"
                     Command="{Binding RotateClicked}"
        ></ImageButton>

    </Grid>



</ContentPage>
